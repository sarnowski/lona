{
  "permissions": {
    "allow": [
      "Skill(develop-rust)",
      "Skill(finishing-work)",

      "Bash(.claude/skills/finishing-work/changed-directories.sh)",
      "Bash(.claude/skills/finishing-work/file-line-counts.sh)",
      "Bash(.claude/skills/finishing-work/changed-files.sh)",
      "Bash(.claude/skills/finishing-work/changed-rust-source-files.sh)",

      "mcp__lona-dev-repl__eval",
      "mcp__lona-dev-repl__restart",

      "Bash(make:*)",
      "Bash(docker:*)",

      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git describe:*)",

      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(tee:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(echo:*)",

      "Bash(gemini:*)",
      "Bash(codex:*)",

      "WebSearch"
    ],

    "ask": ["Bash(git commit:*)", "Bash(git push:*)"]
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/validate-clippy-rules.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  },

  "attribution": {
    "commit": "",
    "pr": ""
  }
}
